---
import { tagCategories } from '../../data/tags';
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>Tag explorer</title>
      <meta
        name="description"
        content="Browse encyclopedia tags grouped by taxonomy and jump to filtered result pages."
      />
  </head>
  <body>
    <main>
      <header>
        <h1>Tag explorer</h1>
        <p>
          Every course, lesson, and concept can be tagged for discovery. Browse the taxonomy below to
          jump straight to filtered results pages for a specific label.
        </p>
      </header>

      <nav aria-label="Tag categories">
        <h2>Categories</h2>
        <ol>
          {tagCategories.map((category) => (
            <li>
              <a href={`#${category.slug}`}>{category.title}</a>
            </li>
          ))}
        </ol>
      </nav>

      {tagCategories.map((category) => (
        <section id={category.slug} aria-labelledby={`${category.slug}-title`}>
          <h2 id={`${category.slug}-title`}>{category.title}</h2>
          {category.description && <p>{category.description}</p>}
          <ul>
            {category.tags.map((tag) => (
              <li id={`${category.slug}-${tag.slug}`}>
                <a href={tag.href}>
                  <strong>{tag.label}</strong>
                </a>
                {tag.description && <p>{tag.description}</p>}
              </li>
            ))}
          </ul>
        </section>
      ))}
    </main>
  </body>
</html>
