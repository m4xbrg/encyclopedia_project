---
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const concepts = await getCollection('concepts');

  return concepts.map((concept) => ({
    params: { subject: concept.data.subject, slug: concept.slug },
    props: { concept },
  }));
}

const { concept } = Astro.props;
const { Content } = await concept.render();
const tags = concept.data.tags ?? [];
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>{concept.data.title} â€“ {concept.data.subject}</title>
  </head>
  <body>
    <main>
      <h1>{concept.data.title}</h1>
      {(tags.length > 0 || concept.data.difficulty || concept.data.estimatedTime) && (
        <div class="meta-chips">
          {tags.map((tag) => (
            <span class="chip chip--tag">{tag}</span>
          ))}
          {concept.data.difficulty && (
            <span class="chip chip--difficulty">{concept.data.difficulty}</span>
          )}
          {concept.data.estimatedTime && (
            <span class="chip chip--time">{concept.data.estimatedTime}</span>
          )}
        </div>
      )}
      <p><strong>Subject:</strong> {concept.data.subject}</p>
      <p>{concept.data.summary}</p>

      <article>
        <Content />
      </article>
    </main>
  </body>
</html>

<style>
  :global(body) {
    margin: 0;
    font-family: 'Inter', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    background: #f8fafc;
    color: #0f172a;
  }

  main {
    max-width: 800px;
    margin: 0 auto;
    padding: 3rem 1.5rem 4rem;
  }

  h1 {
    font-size: clamp(2rem, 4vw, 2.6rem);
    margin-bottom: 0.5rem;
  }

  .meta-chips {
    display: flex;
    gap: 0.5rem;
    margin-bottom: 1rem;
    flex-wrap: wrap;
  }

  .chip {
    display: inline-flex;
    align-items: center;
    padding: 0.35rem 0.8rem;
    border-radius: 999px;
    font-size: 0.85rem;
    font-weight: 600;
  }

  .chip--tag {
    background: rgba(99, 102, 241, 0.12);
    color: #4338ca;
  }

  .chip--difficulty {
    background: rgba(244, 114, 182, 0.15);
    color: #be185d;
  }

  .chip--time {
    background: rgba(59, 130, 246, 0.15);
    color: #1d4ed8;
  }
</style>
